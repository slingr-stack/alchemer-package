{
    "name": "alchemer",
    "label": "Alchemer Package",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.2.6",
            "instanceId": "shared"
        }
    ],
    "configuration": [
        {
            "label": "API Token",
            "name": "apiToken",
            "type": "text",
            "required": true
        },
        {
            "label": "API Token Secret",
            "name": "apiTokenSecret",
            "type": "text",
            "required": true
        },
        {
            "name": "location",
            "label": "Location",
            "type": "buttonsGroup",
            "required": true,
            "defaultValue": "us",
            "typeOptions": {
                "allowCustom": true,
                "possibleValues": [
                    {
                        "label": "US",
                        "name": "us"
                    },
                    {
                        "label": "CA",
                        "name": "ca"
                    },
                    {
                        "label": "EU",
                        "name": "eu"
                    }
                ]
            }
        },
        {
            "name": "webhook",
            "label": "Webhook URL",
            "type": "label",
            "value": "@config.WEBHOOK_URL"
        },
        {
            "name": "ALCHEMER_API_BASE_URL",
            "label": "Alchemer Api Url",
            "type": "label",
            "value": "https://api.example.com/v1/"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Happens when a Alchemer webhook hits the endpoint URL."
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/functions.js"
        },
        {
            "type": "flowStep",
            "namespace": "steps",
            "path": "/flowSteps/apiCallAlchemer"
        }
    ]
}